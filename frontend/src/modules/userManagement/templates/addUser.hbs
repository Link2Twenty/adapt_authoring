<div class="inner">
  <div class="title">
    {{t 'app.adduserformtitle'}}
  </div>
  <form class="addUser forms" action="api/user" method="post" autocomplete="off">
      <div class="form-group">
        <label>{{t 'app.firstname'}} <span class="req">*</span></label>
        <div class="field-error display-none" data-error="">{{t 'app.validationrequired'}}</div>
        <input type="text" name="firstName" autocomplete="off">
      </div>
      <div class="form-group">
        <label>{{t 'app.lastname'}}<span class="req">*</span></label>
        <div class="field-error display-none" data-error="">{{t 'app.validationrequired'}}</div>
        <input type="text" name="lastName" autocomplete="off">
      </div>
      <div class="form-group">
        <label>{{t 'app.usernameoremail'}} <span class="req">*</span></label>
        <div class="field-error display-none" data-error="">{{t 'app.invalidusernameoremail'}}</div>
        <input type="email" name="email" autocomplete="off">
      </div>
      <div class="form-group">
          <label>{{t 'app.password'}} <span class="req">*</span></label>
          <div class="field-error display-none" data-error="">{{t 'app.validationrequired'}}</div>
          <span class="reveal-password-container">
            <input type="password" class="reveal-input-password" id="password" value="" autocomplete="off">
            <button aria-pressed="false" class="reveal-password-button">
              <i class="fa fa-eye reveal-password-show"></i>
              <i class="fa fa-eye-slash reveal-password-hide"></i>
            </button>
          </span>
      </div>
      <div class="form-group">
        <label>{{t 'app.tenant'}}</label>
        <select name="_tenantId">
          {{#each globalData.allTenants.models}}
            <option value="{{{this.attributes._id}}}">{{this.attributes.displayName}}</option>
          {{/each}}
        </select>
      </div>
      <div class="form-group">
        <label>{{t 'app.role'}}</label>
        <select name="role">
          {{#each globalData.allRoles.models}}
            <option value="{{{this.attributes._id}}}">{{this.attributes.name}}</option>
          {{/each}}
        </select>
      </div>
  </form>
</div>
